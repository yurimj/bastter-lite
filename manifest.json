{
  "manifest_version": 3,
  "name": "Bastter Lite",
  "version": "1.0.0",
  "description": "Deixa o bastter.com mais limpo: oculta banners, barras e elementos distrativos. Personalizável nas opções.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bastter.com/*",
        "*://bastter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
	 "all_frames": true,
	 "run_at": "document_start"	  
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Bastter Lite"
  }
}